<Window x:Class="Translator_desktop.Windows.SyntaxAnalyzerSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Translator_desktop.Windows"
        mc:Ignorable="d"
        Title="Syntax analyzer settings"
        Height="150" 
        Width="210" 
        MinWidth="210"
        MaxWidth="210"
        Background="White" 
        MinHeight="150"
        MaxHeight="150">
    <Grid>
        <GroupBox Header="Choose algorithm" Padding="5">
            <StackPanel>
                <RadioButton Margin="3" x:Name="recursiveDesedent">Recursive desedent</RadioButton>
                <RadioButton Margin="3" x:Name="pushdownAutomation">Pushdown automaton</RadioButton>
            </StackPanel>
        </GroupBox>
        <Button Width="80"
                Content="Ok"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="15px"
                Click="Button_Click"/>
    </Grid>
</Window>
